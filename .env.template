# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration (Required for Production)
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=database_production
DB_HOST=127.0.0.1

# Storage Configuration (Optional)
# Directory to store uploaded files (default: ./public)
# CDN_STORAGE_DIR=/var/www/uploads
# Base URL for serving files (if using a CDN/Nginx proxy)
# CDN_BASE_URL=https://cdn.yourdomain.com
CDN_CERT_SUBDIR=storage/certificates
# CDN_MKDIR_RECURSIVE=true (Not currently used in codebase, default behavior is recursive)

# Firebase Configuration
# Note: Firebase Admin SDK currently loads "config/toafl.json".
# Ensure this file exists in production or update utils/firebase-auth.js to use env vars.

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your_email@gmail.com
MAIL_PASS=your_app_password
APP_NAME="TOAFL Online"
